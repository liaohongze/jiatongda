/* pages/repairDetail/index.wxss */
@import "../../wxParse/wxParse.wxss";

.info {
  background-color: #fff;
  margin-bottom: 25rpx;
}
.info image {
  width: 100%;
  height: 583rpx;
}
.info .title_saled {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 34rpx 10rpx 34rpx;
}

.info .title {
  font-size: 36rpx;
  font-weight: 700;
}
.info .saled_see {
  font-size: 23rpx;
  color: #a8a8a8;
}
.info .saled_see .saled {
  margin-right: 50rpx;
}
.info .price {
  padding-bottom: 20rpx;
  padding-left: 34rpx;
  font-size: 40rpx;
  color: #fa5741;
}
.info .price text {
  font-size: 30rpx;
}
.info .description {
  padding: 34rpx 30rpx 34rpx 0;
  margin-left: 30rpx;
  font-size: 23rpx;
  color: #a8a8a8;
  border-top: 1rpx solid #f0f0f0;
}

/* 服务评价 */
.evaluate {
  padding: 35rpx 0 0 33rpx;
  margin-bottom: 25rpx;
  background-color: #fff;
}

.evaluate .title {
  font-size: 32rpx;
  font-weight: 700;
}

.evaluate .eval_item {
  padding: 40rpx 32rpx 40rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.evaluate .eval_item:last-of-type {
  border-color: transparent;
}

.eval_info_container {
  display: flex;
}

.eval_info_container .avatar {
  width: 96rpx;
  height: 96rpx;
   border-radius: 50%; 
}

.eval_info_container .eval_info {
  flex: 1;
  box-sizing: border-box;
  padding-left: 20rpx;
}

.eval_info_container .name_time {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.eval_info_container .name {
  font-size: 26rpx;
}

.eval_info_container .time {
  font-size: 26rpx;
  color: #999999;
}
.eval_info_container .stars {
  overflow: hidden;
}
.eval_info_container .stars text {
  display: inline-block;
  margin-right: 40rpx;
  font-size: 22rpx;
  color: #ff9b5f;
}

.eval_info_container .comment {
  font-size: 26rpx;
  color: #999999;
}

.eval_item .img_box {
  display: flex;
  margin-top: 20rpx;
}
.eval_item .img_box image {
  width: 223rpx;
  height: 175rpx;
  margin-right: 10rpx;
}

/* 服务详情 */
.detail {
  padding: 10rpx 20rpx;
  /* margin-bottom: 140rpx; */
  font-size: 30rpx;
  background-color: #fff;
}

.detail .title {
  padding: 34rpx;
  font-size: 32rpx;
  font-weight: 600;
}

/* 底部菜单 */
.foot {
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  width: 100%;
  height: 119rpx;
  background-color: #fff;
}

.foot button {
  border-radius: 0;
}

.foot .actions {
  flex: 1;
  display: flex;
}

.foot .actions button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 33.333%;
  padding: 0;
  font-size: 27rpx;
  background-color: #fff;
}

.foot .actions button image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 6rpx;
}

.foot .buy {
  width: 288rpx;
  height: 100%;
  font-size: 29rpx;
  color: #fff;
  text-align: center;
  line-height: 119rpx; 
  background-color: #00c482;
}

.back_to_home {
  position: fixed;
  top: 20rpx;
  left: 20rpx;
  display: block;
  width: 80rpx;
  height: 80rpx;
}
.back_to_home image{
  width: 100%;
  height: 100%;
}

/*认证弹窗*/
.auth_window{
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.5);
}
.dialog_window{
  width:80%;
  height:125px;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-radius:5px; 
  z-index:1;
  margin-top:-20px;
}
.auth_content{
  height:80px;
  text-align:center;
  color:#626362;
  line-height:80px;
}
.auth_sure{
  height:45px;
  text-align:center;
  font-size:16px;
  color:#37a923;
  border-top:1px solid #d3d3d3;
  line-height:40px;
  width:100%;
  background-color:#fff;
}