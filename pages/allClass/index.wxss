/* 搜索 */
.search {
  box-sizing: border-box;
  position: relative;
  width: 750rpx;
  padding: 28rpx;
  background-color: #00c482;
}
.search i-icon{
  position: absolute;
  top: 49%;
  left: 50rpx;
  transform: translateY(-50%);
}
.search input{
  font-size: 30rpx;
  padding: 10rpx 0 12rpx 80rpx;
  background-color: #fff;
  border-radius: 35rpx;
}

