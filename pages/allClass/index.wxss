  display: flex;
  padding: 10rpx 0;
  background-color: #fff;
}

.tab_container button {
  display: inline-block;
  width: 187.5rpx;
  padding: 0;
  margin-bottom: 20rpx;
  vertical-align: top;
  line-height: normal;
  background-color: #fff;
}

.tab_container button > image {
  display: block;
  width: 88rpx;
  height: 88rpx;
  margin: 0 auto;
}

.tab_container button > text {
  display: block;
  font-size: 22rpx;
}