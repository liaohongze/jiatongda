/* pages/simAppointment/index.wxss */

.head {
  padding-top: 30rpx;
  padding-left: 30rpx;
  font-size: 35rpx;
  color: #464d5d;
  font-weight: 700;
}

/* 联系方式 */

.contact {
  display: block;
  margin-top: 21rpx;
  font-size: 30rpx;
  background-color: #fff;
}

.contact_item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 36rpx;
}

.contact_item .info > text {
  display: block;
}

.contact_item .info .addr {
  display: flex;
  align-items: center;
  font-size: 23rpx;
  color: #a6a6a6;
}

.expected {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding:36rpx;
  margin-top: 21rpx;
  font-size: 30rpx;
  background-color: #fff;
}

.expected input {
  text-align: right;
}

/* 时间 */

.date, .time {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 116rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  margin-top: 21rpx;
  font-size: 30rpx;
  background-color: #fff;
}

.left_side, .right_side {
  display: flex;
  align-items: center;
}

.left_side text {
  margin-left: 20rpx;
}

.right_side text {
  margin-right: 20rpx;
}

/* 留言框 */

textarea {
  box-sizing: border-box;
  width: 750rpx;
  height: 250rpx;
  padding: 30rpx;
  margin-top: 21rpx;
  font-size: 30rpx;
  background-color: #fff;
}

/* 四、五级 */
.labels {
  padding:36rpx;
  margin-top: 21rpx;
  font-size: 30rpx;
  background-color: #fff;
}

.labels .title {
  display: block;
  margin-bottom: 10rpx;
  color: #000;
}

.labels .fourth_list {
  margin-bottom: 25rpx;
  border-bottom: 1rpx solid #ddd;
}

.labels .fourth_list:last-of-type {
  border-color: transparent;
}

.labels .fifth_list {
  padding-bottom: 30rpx;
}

.labels .fifth_list > text {
  padding: 16rpx 30rpx;
  margin-right: 13rpx;
  margin-bottom: 10rpx;
  font-size: 23rpx;
  color: #181818;
  background-color: #F9F9F9;
  border-radius: 3rpx;
}

.labels .fifth_list > .active {
  color: #fff;
  background-color: #00C482;
}

/* 上传图片 */

.product_uploader .weui-uploader__input-box,
.product_uploader .weui-uploader__img {
  width: 155rpx;
  height: 155rpx;
}

.product_uploader .weui-uploader__file {
  position: relative;
}

.product_uploader .weui-uploader__title {
  font-size: 30rpx;
}

.product_uploader .weui-uploader__file .delete {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
}

/* 协议 */

.agreement {
  padding: 30rpx;
  font-size: 25rpx;
  color: #c1c5c6;
}

.agreement navigator {
  display: inline-block;
  color: #00c482;
}

/* 提交按钮 */

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  width: 100%;
  height: 118rpx;
  font-size: 23rpx;
  background-color: #fff;
}

.footer > navigator {
  position: relative;
  width: 350rpx;
  height: 118rpx;
  text-align: center;
  background-color: #fff;
}

.footer > navigator text {
  position: absolute;
  top: 11rpx;
  left: 176rpx;
  width: 33rpx;
  height: 33rpx;
  font-size:20rpx;
  color: #fff;
  background: rgba(255, 27, 54, 1);
  border-radius: 50%;
}

.footer > navigator image {
  width: 41rpx;
  height: 41rpx;
  margin-top: 29rpx;
}

.footer > navigator view {
  display: block;
  color: #777;
}

.add_shopcart, .submit {
  width: 200rpx;
  height: 118rpx;
  font-size: 29rpx;
  line-height: 118rpx;
  border-radius: 0;
}

.add_shopcart {
  color: #555;
  background-color: #ffc540;
}

.submit {
  color: #fff;
  background-color: #00c482;
}
