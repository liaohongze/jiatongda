/* pages/location/index.wxss */
.select {
  overflow: hidden;
  background-color: #fff;
}

.search_box {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  width: 718rpx;
  height: 56rpx;
  padding: 0 26rpx;
  margin: 16rpx auto 40rpx;
  font-size: 25rpx;
  background-color: #f5f5f5;
  border-radius: 4rpx;
}

.search_box input {
  flex: 1;
  margin-left: 10rpx;
}

.city_container {
  margin-right: 15rpx;
}

.city {
  display: inline-block;
  margin-right: 10rpx;
}

.loction_box {
  padding-bottom: 25rpx;
  margin-bottom: 21rpx;
  background-color: #fff;
}

.loction_box .title {
  padding-left: 29rpx;
  margin-bottom: 24rpx;
  font-size: 26rpx;
  color: #979797;
}

.exact_addr {
  display: flex;
  padding: 0 29rpx;
}

.exact_addr > text {
  flex: 1;
  font-size: 30rpx;
}

.exact_addr > view {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #00c482;
}

.exact_addr image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

/* 搜索结果 */
.result {
  padding: 0 28rpx;
  background-color: #fff;
}
.result .item {
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}
.result .title {
  /* margin-bottom: 24rpx; */
  font-size: 30rpx;
}
.result .addr {
  padding-left: 50rpx;
  font-size: 26rpx;
  color: #979797;
}