/* pages/customized/index.wxss */
.title {
  display: block;
  padding: 10rpx 0 10rpx 30rpx;
  padding-left: 30rpx;
  font-size: 29rpx;
  color: #757575;
}

.list {
  padding: 28rpx 0 60rpx 30rpx;
  background-color: #fff;
}

.fourth_step {
  background-color: #fff;
}

.fourth_step .title {
  background-color: #f9f9f9;
}

.fourth_list {
  padding-left: 0;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #ddd;
}

.fourth_list:last-of-type {
  border-color: transparent;
}

.four_title > text {
  font-size: 30rpx;
}

.list > text {
  box-sizing: border-box;
  display: inline-block;
  height: 55rpx;
  padding: 0 20rpx;
  margin-right: 24rpx;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #8e8e8e;
  line-height: 50rpx;
  border: 1rpx solid #8e8e8e;
  border-radius: 8rpx;
}

.list .active {
  color: #44d4a3;
  border-color: #44d4a3;
}

.list .list {
  padding-bottom: 0;
  margin-bottom: 0;
}

.fourth_list > text {
  margin-bottom: 0;
  color: #000;
  border: 0;
}

