.tip {
  padding: 50rpx 40rpx 120rpx;
  font-size: 26rpx;
  color: #a4a4a4;
}

/* 底栏 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  width: 100%;
  height: 118rpx;
  font-size: 23rpx;
  background-color: #fff;
}

.footer > navigator {
  position: relative;
  width: 350rpx;
  height: 118rpx;
  text-align: center;
  background-color: #fff;
}

.footer > navigator text {
  position: absolute;
  top: 11rpx;
  left: 176rpx;
  width: 33rpx;
  height: 33rpx;
  font-size:20rpx;
  color: #fff;
  background: rgba(255, 27, 54, 1);
  border-radius: 50%;
}

.footer > navigator image {
  width: 41rpx;
  height: 41rpx;
  margin-top: 29rpx;
}

.footer > navigator view {
  display: block;
  color: #777;
}

.add_shopcart, .submit {
  width: 200rpx;
  height: 118rpx;
  padding: 0;
  font-size: 29rpx;
  line-height: 118rpx;
  border-radius: 0;
}

.add_shopcart {
  color: #555;
  background-color: #ffc540;
}

.submit {
  color: #fff;
  background-color: #00c482;
}
