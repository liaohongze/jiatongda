/* pages/appointment/index.wxss */
.head {
  padding-top: 30rpx;
  padding-left: 30rpx;
  font-size: 35rpx;
  color: #464d5d;
  font-weight: 700;
}

label.radio {
  display: inline-block;
  width: 50%;
  margin-bottom: 25rpx;
}

/* 联系方式 */
.addr {
  position: relative;
  display: flex;
  align-items: center;
  padding: 30rpx;
  font-size: 30rpx;
  background-color: #fff;
}

.addr:first-of-type {
  margin-top: 21rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.addr > image {
  display: inline-block;
  width: 38rpx;
  height: 48rpx;
  margin-right: 30rpx;
}

.addr > .tip,
.addr > .info {
  display: inline-block;
}
.addr > .info view {
  font-size: 23rpx;
  color: #a6a6a6;
}

.icon {
  position: absolute;
  top: 50%;
  right: 30rpx;
  transform: translateY(-50%);
}

/* 数量
时间
优惠券 */
.count,
.date,
.time,
.coupon {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 116rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  margin-top: 21rpx;
  font-size: 30rpx;
  background-color: #fff;
}

.left_side,
.right_side {
  display: flex;
  align-items: center;
}

.left_side text {
  margin-left: 20rpx;
}
.right_side text {
  margin-right: 20rpx;
}

/* 留言框 */
textarea {
  box-sizing: border-box;
  width: 750rpx;
  height: 250rpx;
  padding: 30rpx;
  margin-top: 21rpx;
  font-size: 30rpx;
  background-color: #fff;
}

/* 协议 */
.agreement {
  padding: 30rpx;
  font-size: 25rpx;
  color: #c1c5c6;
}

.agreement navigator {
  display: inline-block;
  color: #00c482;
}

/* 底部菜单 */
.foot {
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  width: 100%;
  height: 118rpx;
  overflow: hidden;
  border-top: 1rpx solid #f9f9f9;
  opacity: 1;
  background-color: #fff;
}
.foot view {
  flex: 1;
  height: 100%;
  padding-top: 18rpx;
  padding-left: 40rpx;
  background-color: #fff;
}
.foot view > text {
  display: block;
}
.foot .origin_price {
  font-size: 22rpx;
  color: #909090
}
.foot .price {
  font-size: 27rpx;
}
.foot .price text {
  font-size: 37rpx;
  color: #fa5741;
}
.foot button {
  width: 288rpx;
  height: 100%;
  font-size: 29rpx;
  color: #fff;
  line-height: 118rpx;
  background-color: #00c482;
  border-radius: 0;
}
