/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}
.usermotto {
  margin-top: 200rpx;
}
/*######标题#######*/
.title{
  margin-top: 80rpx;
  margin-bottom:80rpx;
  font-size: 24px;
  color: #027f49;
}
/*#######账号输入########*/
.account_view{
  width: 90%;
}
/*######按钮事件#######*/
.login_or_regist{
  margin-top: 20px;
  width:100%;
}
.login_button{
  border:1px solid #f5f5f5;
  font-size: 16px;
  width: 70%;
  border-radius:15px;
  background: linear-gradient(to right, #01804b,#11cd80);
  color: #fff;
}
.regist_button{
  margin-top: 20px;
  border:1px solid #01804b;
  font-size: 16px;
  width: 70%;
  border-radius:15px;
  color: #01804b;
  background-color: #fff;
}
/*认证弹窗*/
.auth_window{
  width:100%;
  height:100%;
  position:absolute;
  top:0px;
  display: none;
  justify-content: center;
  align-items: center;
}
.auth_background{
  width:100%;
  height:100%;
  position:fixed;
  top:0px;
  background-color:#000;
  opacity:0.5;
  overflow: hidden
}
.dialog_window{
  width:80%;
  height:125px;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-radius:5px; 
  z-index:1;
  margin-top:-20px;
}
.auth_content{
  height:80px;
  text-align:center;
  color:#626362;
  line-height:80px;
}
.auth_sure{
  height:45px;
  text-align:center;
  font-size:16px;
  color:#37a923;
  border-top:1px solid #d3d3d3;
  line-height:40px;
  width:100%;
  background-color:#fff;
}
